<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Judul -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Data Mahasiswa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"/>

    <!-- Bubble Nama -->
    <TextView
        android:id="@+id/tvNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nama: Lisa Rahmawati Putri"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/bubble_bg"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="12dp"/>

    <!-- Bubble NIM -->
    <TextView
        android:id="@+id/tvNIM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NIM: E41241120"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/bubble_bg"
        android:layout_below="@id/tvNama"
        android:layout_marginTop="12dp"/>

    <!-- Bubble Prodi -->
    <TextView
        android:id="@+id/tvProdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prodi: Teknik Informatika"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/bubble_bg"
        android:layout_below="@id/tvNIM"
        android:layout_marginTop="12dp"/>

    <!-- Bubble Jadwal -->
    <TextView
        android:id="@+id/tvJadwal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jadwal: Kamis-Workshop Mobile Application dan Workshop Kualitas Perangkat Lunak"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/bubble_bg"
        android:layout_below="@id/tvProdi"
        android:layout_marginTop="12dp"/>

    <!-- Bubble Info -->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informasi: Setiap Workshop Memiliki 4 SKS"
        android:textSize="16sp"
        android:padding="12dp"
        android:background="@drawable/bubble_bg"
        android:layout_below="@id/tvJadwal"
        android:layout_marginTop="12dp"/>

</RelativeLayout>