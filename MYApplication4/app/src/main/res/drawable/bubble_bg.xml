<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna latar belakang bubble -->
    <solid android:color="#E0F7FA" />

    <!-- Sudut melengkung -->
    <corners android:radius="16dp" />

    <!-- Padding di dalam bubble -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp" />

    <!-- Garis tepi tipis -->
    <stroke
        android:width="1dp"
        android:color="#0097A7" />

</shape>
